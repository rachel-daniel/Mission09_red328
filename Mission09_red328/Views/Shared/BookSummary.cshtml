@{
}

@model Book

<div class="card card-outline-primary m-2 p-2">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary bg-info" style="float:right">
                <small>@Model.Price.ToString("C")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">By @Model.Author</div>
    <div class="card-text p-1">@Model.Publisher</div>
    <div class="card-text p-1">@Model.Isbn</div>
    <div class="card-text p-1">@Model.Classification</div>
    <div class="card-text p-1">@Model.PageCount pages</div>

    <form method="post" asp-page="/Purchase">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Purchase</button>
        </span>

    </form>
</div>