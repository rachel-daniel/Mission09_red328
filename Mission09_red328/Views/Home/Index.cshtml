@{
    ViewData["Title"] = "Home";
}

@model BooksViewModel

<h1>Welcome to my Bookstore</h1>
@foreach (Book b in Model.Books)
{
    <h3>@b.Title</h3>
    <ul>
        <li>By @b.Author</li>
        <li>@b.Publisher</li>
        <li>@b.Isbn</li>
        <li>@b.Category</li>
        <li>@b.Classification</li>
        <li>@b.PageCount pages</li>
        <li>$@b.Price</li>
    </ul>
    <br />
}

<div page-blah="@Model.PageInfo" page-action="Index"></div>